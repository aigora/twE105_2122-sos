#include <stdio.h>

int main()
{
    char t,d,h,a,eleccion;
do{
    printf("Bienvenido al encuentratodo, ¿que desea utilizar?\n");
    printf("Si desea entrar en los datos pulse d\n");
    printf("Si desea entrar en las tablas estadisticas pulse t\n");
    printf("Si desea jugar al adivinador pulse a\n");
    printf("Si desea ayuda sobre como funciona el programa pulse h\n");
    scanf("%c", &eleccion);

    switch (eleccion)
    {
 case'd':
     printf("A seleccionado la seccion datos");
    break;

case't':
    printf("A selecionado la seccion tablas estadisticas");
    break;
case'h':
    printf("El encuentratodo es un programa con una base de datos de archivos csv el cual permite al usuario encontrar datos estadisticos acerca de (tema indicado), ademas contamos con un minijuego de prediccion llamado el adivinador");
    break;
case'a':
    printf("Comenzemos a jugar con el adivinador, consiste en que usted va a pensar en uno de los archivos csv encontrados en los datos y el programa mediante preguntas adivinara qué archivo esta usted pensando");
    break;
    default:
    printf("Por favor, seleccione una de las letras indicadas");
    }}while(eleccion!='h'&&eleccion!='t'&&eleccion!='d'&&eleccion!='a');

    return 0;
}


